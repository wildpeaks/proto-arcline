#VRML V2.0 utf8

EXTERNPROTO ArcLine [
	exposedField  SFFloat  fromAngle
	exposedField  SFFloat  toAngle
	exposedField  SFFloat  radius
	exposedField  SFFloat  tesselation
	exposedField  SFBool   startCap
	exposedField  SFBool   endCap
	field         SFBool   solid
] "../src/proto.ArcLine.wrl#ArcLine"

PROTO Debug [
	exposedField  SFColor     color     0 0 0
	exposedField  SFRotation  rotation  0 0 1 0
]{
	Transform {
		rotation IS	rotation
		children [
			Transform {
				translation	0 5 0
				children Shape {
					appearance Appearance {
						material Material {
							diffuseColor 0 0 0
							emissiveColor IS color
						}
					}
					geometry Cylinder {
						radius 0.005
						height 10
					}
				}
			}
		]
	}
}

WorldInfo {
	title "Forward & Backward"
}

Background {
	skyColor .2 .2 .2
}

Viewpoint {
	position 0.113 -1.159 9.610
	orientation 0.000 0.000 1.000 0.000
	fieldOfView 0.785
	description	"Default"
}

Debug {
	rotation 0 0 1 -2
	color 0 0 0
}
Debug {
	rotation 0 0 1 2.5
	color 1 1 1
}


# One way, Forwards
Shape {
	appearance Appearance {
		material Material {
			diffuseColor 0 0 0
			emissiveColor 0 1 0
		}
	}
	geometry ArcLine {
		radius 1
		fromAngle -2
		toAngle 2.5
	}
}

# One way, Backwards
Shape {
	appearance Appearance {
		material Material {
			diffuseColor 0 0 0
			emissiveColor 0 0.5 0
		}
	}
	geometry ArcLine {
		radius 2
		fromAngle 2.5
		toAngle -2
	}
}

# Other way, Forwards
Shape {
	appearance Appearance {
		material Material {
			diffuseColor 0 0 0
			emissiveColor 1 0 0
		}
	}
	geometry ArcLine {
		radius 3
		fromAngle 2.5
		toAngle 4.2831853 # -2 + 2PI
	}
}

# Other way, Backwards
Shape {
	appearance Appearance {
		material Material {
			diffuseColor 0 0 0
			emissiveColor 0.5 0 0
		}
	}
	geometry ArcLine {
		radius 4
		fromAngle 4.2831853 # -2 + 2PI
		toAngle 2.5
	}
}
